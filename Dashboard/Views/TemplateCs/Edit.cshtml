                                                                <div class="col-lg-4"><label class="pad10">Introduction Message</label></div>
                                                                <div class="col-lg-8">
                                                                    @Html.TextAreaFor(model => model.IntroductionMessage, new { htmlAttributes = new { @class = "form-control" } })
                                                                    @Html.ValidationMessageFor(model => model.IntroductionMessage, "", new { @class = "text-danger" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row padfull20">
