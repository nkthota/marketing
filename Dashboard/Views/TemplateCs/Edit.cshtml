                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="hpanel">
                                        <ul class="nav nav-tabs">
                                            <li class="active"><a data-toggle="tab" href="#tab-1" aria-expanded="true"><i class="fa fa-align-justify"></i> Main Content</a></li>
